<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar" >
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorCardBackground">@color/card_light_background</item>
        <item name="colorUnusedBackground">@color/unused_light_background</item>
        <item name="colorDrawableTint">@color/drawable_color_light</item>
        <item name="colorMaterialRipple">@color/ripple_color_light</item>
        <item name="colorFloatingToolbar">@color/floating_toolbar_light</item>
        <item name="drawableProgressBackground">@drawable/progess_drawable</item>
        <item name="md_title_color">@android:color/black</item>
        <item name="md_content_color">@android:color/black</item>
        <item name="md_positive_color">?attr/colorPrimary</item>
        <item name="md_negative_color">?attr/colorPrimary</item>
        <item name="md_neutral_color">?attr/colorPrimary</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
    </style>

    <style name="AppThemeDark" parent="@style/Theme.AppCompat" >
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorCardBackground">@color/card_dark_background</item>
        <item name="colorUnusedBackground">@color/unused_dark_background</item>
        <item name="colorDrawableTint">@color/drawable_color_dark</item>
        <item name="colorMaterialRipple">@color/ripple_color_dark</item>
        <item name="colorFloatingToolbar">@color/floating_toolbar_dark</item>
        <item name="drawableProgressBackground">@drawable/progess_drawable_dark</item>
        <item name="md_title_color">@android:color/white</item>
        <item name="md_content_color">@android:color/white</item>
        <item name="md_positive_color">?attr/colorPrimary</item>
        <item name="md_negative_color">?attr/colorPrimary</item>
        <item name="md_neutral_color">?attr/colorPrimary</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/primary_text_color_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
    </style>

    <style name="AppThemeLauncher">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PreferenceListHeader" parent="Widget.TextView.ListSeparator">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Button.Tinted" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Tinted.Dark" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
