<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general" >
        <SwitchPreference
            android:key="autoRefresh"
            android:title="@string/pref_title_autorefresh"
            android:summary="@string/pref_summary_autorefresh"
            android:defaultValue="false" />
        <SwitchPreference
            android:key="autoReset"
            android:title="@string/pref_title_autoreset"
            android:summary="@string/pref_summary_autoreset"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_ui" >
        <SwitchPreference
            android:key="darkTheme"
            android:title="@string/pref_title_darktheme"
            android:summary="@string/pref_summary_darktheme"
            android:defaultValue="false" />
        <SwitchPreference
            android:key="coloredNavBar"
            android:title="@string/pref_title_navbar"
            android:summary="@string/pref_summary_navbar"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_info" >
        <Preference
            android:key="about"
            android:title="@string/pref_title_about"
            android:summary="@string/pref_summary_about"
            android:persistent="false" >
        </Preference>
        <Preference
            android:key="license"
            android:title="@string/pref_title_license"
            android:persistent="false" >
        </Preference>
        <CheckBoxPreference
            android:key="crashReport"
            android:title="@string/pref_title_crashreport"
            android:summary="@string/pref_summary_crashreport"
            android:defaultValue="true" />
    </PreferenceCategory>

</PreferenceScreen>
