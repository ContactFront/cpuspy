<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_welcome"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/primary"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/welcome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/welcome_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/welcome_summary"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <TextView
                android:id="@+id/welcome_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/welcome_features"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_cpuinfo"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_crashreport"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_autoreset"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/welcome_autorefresh"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="6dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" />

            <View
                android:id="@+id/welcome_blankspace"
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <Button
                android:id="@+id/btn_welcome"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/action_dismiss"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="14sp"
                android:clickable="true"
                android:background="@drawable/round_button"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>