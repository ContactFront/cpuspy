<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_state_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ui_freq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text_color"/>

    <TextView
        android:id="@+id/ui_percentage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ui_freq_text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text_color"/>

    <TextView
        android:id="@+id/ui_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ui_freq_text"
        android:layout_alignParentRight="true"
        android:textColor="@color/primary_text_color"/>

    <ProgressBar
        android:id="@+id/ui_bar"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@id/ui_freq_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progess_drawable"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/ui_bar_dark"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@id/ui_freq_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progess_drawable_dark"
        android:visibility="gone"/>

</RelativeLayout>