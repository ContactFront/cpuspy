<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/about_background"
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:background="@color/primary"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_about"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            card_view:cardCornerRadius="3dp"
            card_view:cardBackgroundColor="@color/card_light_background">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/pref_about_appname"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/version_name"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_github"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_github"
                        style="?android:attr/borderlessButtonStyle"
                        android:clickable="true" />

                    <ImageButton
                        android:id="@+id/btn_paypal"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_toEndOf="@+id/btn_github"
                        android:src="@drawable/ic_paypal"
                        style="?android:attr/borderlessButtonStyle"
                        android:clickable="true" />

                    <ImageButton
                        android:id="@+id/btn_xda"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_toEndOf="@+id/btn_paypal"
                        android:src="@drawable/ic_xda"
                        style="?android:attr/borderlessButtonStyle"
                        android:clickable="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/about_appinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/pref_about_appinfo"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/about_header_developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/pref_about_header_dev"
                    android:textColor="@color/accent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/pref_about_developer"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/about_header_contrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/pref_about_header_contrib"
                    android:textColor="@color/accent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/origdev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/pref_about_origdev"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/iconcreator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/pref_about_iconcreator"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</ScrollView>
