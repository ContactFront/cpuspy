<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pref_about_appname"
            android:textColor="@color/primary_text_color"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/version_name"
            android:textColor="@color/primary_text_color"
            android:textStyle="bold"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_github"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_github"
                style="?android:attr/borderlessButtonStyle"
                android:clickable="true" />

            <ImageButton
                android:id="@+id/btn_paypal"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toEndOf="@+id/btn_github"
                android:src="@drawable/ic_paypal"
                style="?android:attr/borderlessButtonStyle"
                android:clickable="true" />

            <ImageButton
                android:id="@+id/btn_xda"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/btn_paypal"
                android:src="@drawable/ic_xda"
                style="?android:attr/borderlessButtonStyle"
                android:clickable="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/about_appinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/pref_about_appinfo"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/about_header_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/pref_about_header_dev"
            android:textColor="@color/accent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pref_about_developer"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/about_header_contrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/pref_about_header_contrib"
            android:textColor="@color/accent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/origdev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pref_about_origdev"
            android:textColor="@color/primary_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/iconcreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pref_about_iconcreator"
            android:textColor="@color/primary_text_color"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>
