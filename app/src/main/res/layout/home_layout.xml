<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/cpu_core_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/primary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_cpu_freq0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:textColor="@android:color/primary_text_dark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ui_cpu_freq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_toEndOf="@+id/ui_cpu_freq0"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ui_cpu_freq2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_toEndOf="@+id/ui_cpu_freq1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ui_cpu_freq3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_toEndOf="@+id/ui_cpu_freq2"
                android:visibility="gone"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ui_header_total_state_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/total_state_time"
                    android:textColor="@color/accent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/ui_total_state_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ui_header_total_state_time"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="42sp"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/ui_info_button"
                    android:src="@drawable/ic_info"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@+id/ui_header_total_state_time"
                    android:layout_toEndOf="@+id/ui_total_state_time"
                    android:layout_centerVertical="true"
                    style="?android:attr/borderlessButtonStyle"
                    android:clickable="true"
                    android:onClick="infoButton"
                    android:visibility="gone"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view_states"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_below="@+id/ui_total_state_time"
                    card_view:cardCornerRadius="2dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ui_states_view"
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <include layout="@layout/unused_states_layout"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <include layout="@layout/charged_layout"/>
                <include layout="@layout/states_warning_layout"/>

            </RelativeLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>